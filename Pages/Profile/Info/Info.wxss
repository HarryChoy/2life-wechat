.container {
  width: 100%;
  height: 100%;
}

.container .title {
  padding: 43rpx;
  font-size: 61rpx;
}

.container .info {
  padding: 0 43rpx;
}

.info .avatar, .info .nick-name, .info .user-id {
  display: flex;
  display: -webkit-flex;
  position: relative;
  height: 115rpx;
  border-bottom: 1px solid #F1F1F1;
  align-items: center;
}

.info .title {
  min-width: 100rpx;
  margin: 0;
  padding: 0;
  font-size: 29rpx;
  color: #AAAAAA;
}

.info .avatar .image {
  width: 86rpx;
  height: 86rpx;
  border-radius: 50%;
}

.info .nick-name .edit {
  position: absolute;
  right: 0;
  width: 45rpx;
  height: 45rpx;
}

.edit .image {
  width: 45rpx;
  height: 45rpx;
}

.info .nick, .info .id {
  font-size: 36rpx;
}

.container .badge {
  margin: 100rpx 43rpx;
}

.badge .title {
  margin: 29rpx 0;
  padding: 0;
  font-size: 36rpx;
  color: #444444;
}

.badge .content {
  font-size: 29rpx;
  color: #444444;
}