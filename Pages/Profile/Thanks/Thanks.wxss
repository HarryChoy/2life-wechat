.container {
  width: 100%;
  height: 100%;
}

.team {
  margin: 48rpx 48rpx 0;
}

.team .title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333333;
}

.team .item {
  display: flex;
  display: -webkit-flex;
  padding: 32rpx 0;
  border-bottom: 1px solid #F1F1F1;
  align-items: center;
}

.item:first-child {
  margin-top: 16rpx;
}

.item .avatar {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
}

.item .content {
  margin-left: 64rpx;
}

.cotnent .name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.content .des {
  font-size: 28rpx;
  color: #666666;
}

.team .description {
  margin-top: 12rpx;
  font-size: 28rpx;
  color: #AAAAAA;
}

.team .part {
  margin-top: 32rpx;
  padding-bottom: 40rpx;
  font-size: 32rpx;
  color: #333333;
}

.part view {
  display: inline-block;
  width: 25%;
  padding: 16rpx 0;
  text-align: center;
}