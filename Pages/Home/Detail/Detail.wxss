.container {
  position: relative;
  width: 100%;
  min-height: 90%;
  padding-bottom: 108rpx;
}

.swiper {
  height: 576rpx;
}

.swiper .image {
  width: 755rpx;
  height: 100%;
}

.content {
  position: relative;
  min-height: 50%;
  margin: 43rpx;
  padding-bottom: 45rpx;
}

.content .date, .content .location {
  font-size: 22rpx;
  color: #AAAAAA;
}

.content .title {
  padding: 80rpx 0;
  font-size: 43rpx;
  font-weight: bold;
  color: #444444;
}

.content .text {
  line-height: 150%;
  font-size: 29rpx;
  font-weight: 300;
  text-align: justify;
  word-break: break-all;
  color: #333333;
}

.content .location {
  display: flex;
  display: -webkit-flex;
  margin: 43rpx 0;
}

.content .location .image {
  width: 21.6rpx;
  height: 27rpx;
  margin-right: 20rpx;
}

.container .mood {
  display: flex;
  display: -webkit-flex;
  position: absolute;
  width: 100%;
  height: 45rpx;
  bottom: 142rpx;
  line-height: 45rpx;
  justify-content: space-between;
  font-size: 29rpx;
}

.container .mood .normal, .container .mood .change {
  display: flex;
  display: -webkit-flex;
  margin-left: 43rpx;
}

.container .mood .image {
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}

.container .mood .change .image {
  margin-right: 50rpx;
}

.container .mood .normal text {
  margin: 0 10rpx;
}

.container .mood .normal .description {
  color: #AAAAAA;
}

.container .mood .edit {
  margin-right: 43rpx;
  color: #2DC3A6;
}

.like {
  position: absolute;
  right: 43rpx;
  bottom: 43rpx;
}

.like .image {
  width: 115rpx;
  height: 115rpx;
}

.more {
  position: absolute;
  top: 43rpx;
  right: 43rpx;
  width: 45rpx;
  height: 8rpx;
}

.more .image {
  display: block;
  width: 45rpx;
  height: 8rpx;
}

.edit-btn {
  position: fixed;
  display: flex;
  display: -webkit-flex;
  bottom: 0;
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  justify-content: space-between;
  align-items: center;
  background: #fafafa;
  color: #AAAAAA;
}

.edit-btn view {
  width: 50%;
  height: 100%;
  text-align: center;
  font-size: 29rpx;
}

.edit-btn image {
  width: 25rpx;
  height: 25rpx;
  margin: 0 10rpx;
}